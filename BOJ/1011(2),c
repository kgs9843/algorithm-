#include <stdio.h>
int main()
{
	int t;
	scanf("%d",&t);
	int i,j,k,x,y,subt;
	for(i=0;i<t;i++){
		scanf("%d %d",&x,&y);
		subt=y-x;
		j=1;
		int count=1;
		int answer=1;
		int a;
		while(j<subt){
			for(k=0;k<count;k++){
				j++;
			}
			if(j%2==0){
				count++;
			}
			answer++;
		}
		printf("%d\n",answer);
	}
	return 0;
}
